<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/specific_problem_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/specific_problem_background"
    tools:context=".Person_Main_Interface_Activity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/drButton"
            android:layout_width="81dp"
            android:layout_height="81dp"

            android:layout_marginStart="312dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/iconprofile"
            android:contentDescription="@string/userProfile"
            android:onClick="openDrawer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="411dp"
            android:layout_height="128dp"
            android:layout_marginStart="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/top_title" />

        <ImageView
            android:id="@+id/logoimg"
            android:layout_width="124dp"
            android:layout_height="132dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.013"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/logotitle"
            android:layout_width="157dp"
            android:layout_height="53dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="43dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/headerImage"
            app:srcCompat="@drawable/icon_name" />


        <EditText
            android:id="@+id/problemTitle"
            android:layout_width="346dp"
            android:layout_height="54dp"
            android:autofillHints=""
            android:background="@drawable/focused_behaviour"
            android:drawableStart="@drawable/ic_message"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Enter Problem Title"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.039" />

        <EditText
            android:id="@+id/problemLocation"
            android:layout_width="342dp"
            android:layout_height="48dp"
            android:autofillHints=""
            android:background="@drawable/focused_behaviour"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="12dp"
            android:hint="Enter Problem Location"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/problemTitle"
            app:layout_constraintVertical_bias="0.063" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="354dp"
            android:layout_height="55dp"
            android:layout_marginStart="28dp"
            android:gravity="center"
            android:text="Report a Problem"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerImage"
            app:layout_constraintVertical_bias="0.026" />

        <Button
            android:id="@+id/submitProblembtn"
            android:layout_width="165dp"
            android:layout_height="57dp"
            android:background="@drawable/submitproblem"
            android:text=" "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.934"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/problemDetails"
            android:layout_width="332dp"
            android:layout_height="224dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/focused_behaviour"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Enter Problem Details"
            android:inputType="textMultiLine"
            android:paddingStart="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/problemLocation" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
